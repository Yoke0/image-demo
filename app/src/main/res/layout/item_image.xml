<?xml version="1.0" encoding="utf-8"?>
<com.example.imagedemo.MyLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_image">

    <ImageView
        android:id="@+id/item_image_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/item_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#10000000"/>

    <ImageView
        android:id="@+id/item_image_select"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:src="@mipmap/box_no_select_white"
        app:layout_constraintEnd_toEndOf="@id/item_image_image"
        app:layout_constraintTop_toTopOf="@id/item_image_image"/>
</com.example.imagedemo.MyLayout>